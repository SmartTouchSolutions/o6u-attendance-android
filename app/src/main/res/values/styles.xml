<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="headingText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="paragraphText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mainInputFieldDesign">
        <item name="android:ems">100</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="inputFieldTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mainButtonDesign">
        <item name="android:background">@drawable/dark_blue_button_design</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="switchTheme" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated" tools:ignore="NewApi">#4AD863</item>
    </style>


